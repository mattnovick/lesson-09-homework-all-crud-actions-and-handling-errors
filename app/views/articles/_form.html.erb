<% if @article.errors.any? %>     
  <div id="error_explanation">       
    <h2><%= pluralize(@article.errors.count, "missing field") %> need to be completed:</h2>
    <ul>       
    <% @article.errors.full_messages.each do |message| %>         
      <li><%= message %></li>       
    <% end %>       
    </ul>     
  </div>   
<% end %>

<%= form_for @article do |f| %>   

  <p><%= f.label :title %>
    <br>     
    <%= f.text_field :title %>   
  </p>

  <p><%= f.label :body %>
    <br>     
    <%= f.text_field :body %>   
  </p>

  <%= f.submit %> 

<% end %>